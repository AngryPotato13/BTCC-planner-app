<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Location"
        app:srcCompat="@drawable/ic_list" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="248dp"
        android:layout_height="23dp"
        android:layout_marginTop="28dp"
        android:text="List name"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/Location" />

    <TextView
        android:id="@+id/tv_Location"
        android:layout_width="339dp"
        android:layout_height="21dp"
        android:text="Where its at"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_list_days"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Days: " app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_Location" />

    <TextView
        android:id="@+id/tv_list_staying"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Staying: "
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_days" />

    <TextView
        android:id="@+id/tv_list_eating"
        android:layout_width="339dp"
        android:layout_height="21dp"
        android:text="Where are you eating: "
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_staying" />

    <TextView
        android:id="@+id/tv_list_amount_poi"
        android:layout_width="339dp"
        android:layout_height="21dp"
        android:text="POI visiting: "
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_eating" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="64dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>